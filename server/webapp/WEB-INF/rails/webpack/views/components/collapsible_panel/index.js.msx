const m          = require('mithril');
const Stream     = require('mithril/stream');
const styles     = require('./index.scss');
const classnames = require('classnames/bind').bind(styles);

module.exports = {
  oninit(vnode) {
    const self    = vnode.state;
    self.expanded = Stream(false);

    self.toggle = () => {
      self.expanded(!self.expanded());
    };

    self.showState = () => {
      return self.expanded() ? 'show' : 'hide';
    }
  },

  view(vnode) {
    const self = this;

    const collapsibleClasses = classnames(self.expanded() && styles.expanded, self.expanded() || styles.collapsed);
    return (
      <div class={classnames(styles.collapse, collapsibleClasses)}>
        <div class={classnames(styles.collapse_header, collapsibleClasses)}
             data-test-id="collapse_header"
             onclick={self.toggle}>
          {vnode.attrs.header}
        </div>

        <div data-test-id="collapse_body"
             class={classnames(styles.collapse_body, styles[self.showState()])}>
          {vnode.children}
        </div>
      </div>
    );
  }
};
